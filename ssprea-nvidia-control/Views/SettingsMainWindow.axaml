<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:vm="using:ssprea_nvidia_control.ViewModels"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:system="clr-namespace:System;assembly=System.Runtime"
        xmlns:lang="clr-namespace:ssprea_nvidia_control.Lang"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="450"
        Width="400" Height="450"
        x:Class="ssprea_nvidia_control.Views.SettingsMainWindow"
        x:DataType="vm:SettingsMainWindowViewModel"
        Background="#262626"
        Title="{x:Static lang:Resources.SettingsTitle}">
    
        
        

        <Grid Margin="10"
              RowDefinitions="*,10*,*"
              ColumnDefinitions="*,3*"
              
              >
            
                <Label Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Top" Content="{x:Static lang:Resources.SettingsSubtitle}"/>
            
                <ListBox Grid.Row="1" Grid.Column="0" SelectedIndex="{Binding SelectedSettingCategoryIndex}">
                    <ListBoxItem Content="GUIs"/>
                    <ListBoxItem Content="Monitoring"/>
                    
                    
                </ListBox>
            
            <Border Grid.Row="1" Grid.Column="1" BorderBrush="Gray" BorderThickness="2" Margin="6" Padding="8" CornerRadius="10" >
                <ContentControl Content="{Binding CurrentSettingCategoryContent}"/>
            </Border>
            
            <Button Grid.Row="2" Grid.Column="1" HorizontalAlignment="Right" Command="{Binding SaveSettingsAsync}" Content="{x:Static lang:Resources.ButtonSave}"/>
        </Grid>
        
        
        
</Window>
